<header>
    <img class="mb-4 align-items-center" src="/images/logo.png" alt="" width="250" height="250">
</header>

{{!-- this is the student info update container --}}
<main class="container child-info-update border border-info rounded">
  <h3 class=""></h3>
  <h4>Teacher: {{studentCard.teacher.name}}</h4>
  <h4>Name: {{studentCard.first_name}} {{studentCard.last_name}}</h4>
  <h4>Date of Birth: {{studentCard.dob}}</h4>
  <input class="form-control" id="allergyInput" placeholder="Allergies: {{studentCard.allergies}}"> </input>
  <input class="form-control" id="medicationInput" placeholder="Medication"> </input>
  <input class="form-control" id="dietInput" placeholder="Diet"> </input>
  <input class="form-control" id="notesInput" placeholder="Notes"> </input>
  <button type="submit" id="updateSubmit">Update Student Information</button>
</main>

